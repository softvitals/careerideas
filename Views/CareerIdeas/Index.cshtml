@model IEnumerable<CareerIdeas.Models.CareerIdea>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@
<br/>
<div class="about">
    <h1>Career Ideas</h1>
</div>


<p>
    @Html.ActionLink("Create New Idea", "Create", "CareerIdeas" , new { @class = "idea" })
</p>
</br>
<table class="table table-hover table-bordered">
    <tr>
        <th style="color:lightseagreen">
            @Html.DisplayNameFor(model => model.CareerCategory.Name)
        </th>
        <th style="color:lightseagreen">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="color:lightseagreen">
            @Html.DisplayNameFor(model => model.Benefits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CareerCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Benefits)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
